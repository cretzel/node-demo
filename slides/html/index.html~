	<script type="text/javascript">
		var slide=1;
		function loadSlide() {
                    console.log("slide " + slide);
		  $(".slide").fadeToggle(500, function() {
		    $(this).load("slide-" + slide + ".html", function() {
		       $(this).fadeToggle(500);
		    })
                  });

		}

                $(document).ready(function() {
		  $("#main").click(function() {
		    slide=slide+1;
                    loadSlide();
		  });
		  $(".prev").click(function() {
		    slide=slide-1;
                    loadSlide();
		  });
		  loadSlide();
		});
	</script>
